<Window x:Class="TextEditor.IndentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="IndentDialog" Height="150" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Enter indent (spaces):" Margin="10"/>
            <TextBox x:Name="IndentTextBox" Width="100" Margin="10"/>
            <Button Content="OK" Width="80" Margin="10" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
